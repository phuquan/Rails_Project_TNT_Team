<% provide(:title, @user.name) %>

<body style="padding: 0 !important; margin: 0 !important">
<header>
	<div class="user-page-header">
	</div>
</header>
<div class="container">
	<div class="row">
    <div class="row">
      
  		<div class="col-sm-3"><!--left col-->
              
          <ul class="list-group profile-section">
            <li class="list-group-item text-muted">
              <div class="text-center">
                <%= gravatar_for @user %>
                <h3><%= @user.name %></h3>
                <%= render 'follow_form' %>
              </div>
            </li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Joined</strong></span><%= @user.created_at.strftime("%d-%b-%Y") %></li>
            
          </ul> 
               
      
        </div><!--/col-3-->
    	<div class="col-sm-9" style="margin-top: 10px">
          
          <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#home" data-toggle="tab">Profile</a></li>
          </ul>
              
          <div class="tab-content">
            <div class="tab-pane active" id="home">
              <div class="table-responsive">
                <table class="table">
                  
                  <tbody id="items">
                    <tr>
                        <td><strong>Name</strong></td>
                        <td><%= @user.name %></td>
                      </tr>
                      <tr>
                        <td><strong>Birthday</strong></td>
                        <td><%= @user.birthdate %></td>
                      </tr>
                      <tr>
                        <td><strong>Email</strong></td>
                        <td><%= @user.email %></td>
                      </tr>
                      
                  </tbody>
                </table>
                
              </div><!--/table-resp-->
            
            
          </div><!--/tab-content-->

        </div><!--/col-9-->
    </div><!--/row-->
  </div>
</div>

<hr>

<div class="container home-content">
	<h2>Posted images</h2>
    <div id="links">
		<% index = 0;
		@shared_images.each do |image| %>
		<%
			if ((index + 1) % 4) == 1
		%>
		<div class = "row" style="padding: 5px;">
		<%
			end
			index += 1
		%>
		<div class="col-lg-3">
			<div class="row">
			   <a href="/images/<%= image.id %>" title="<%= image.name %>" class="image_element" id="<%= image.id %>" data-gallery>
					  <img src="<%= image.url %>" width="280px" height="280px">
				   </a>
		   </div>
		   
		 </div>
		  <%
			if ((index + 1) % 4) == 1
		%>
		</div>
		<%end%>
		<%end%>
	</div>
</div>
<body>