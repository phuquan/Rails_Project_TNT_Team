<p id="notice"><%= notice %></p>

<div class="container">
    <div class="col-lg-8">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <h2 style="float:left;text-style:bold">â˜… <%= @image.name %></h2>
                </div>
                <div class="row">
                    <p><%= @image.description %></p>
                </div>
            </div>
            <div class="col-md-3" style="background-color:floralwhite;">
                <section class="user_info">
                    <p style="font-size:12px">Posted at <%= @image.created_at.strftime("%I:%M%p") + " on " + @image.created_at.strftime(" %Y/%m/%d") %> by</p>
                    <!--<div class="row">-->
                        <span class="col-sm-6"><%= link_to gravatar_for(current_user, size: 50), current_user %></span>
                        <h3> <% if(current_user.name != nil) %>
                                <%= link_to current_user.name, current_user %>
                            <% else %>
                                <%= link_to "No name", current_user %>
                            <% end %>
                        </h3>
                    <!--</div>-->
                </section>
            </div>
        </div>
        <div class="row">
            <div class="panel panel-success" style="background-color:ghostwhite;text-align: center;">
                <div class="panel-body"><%= image_tag @image.url %></div>
             </div>
        </div>
        <div class="row" id="comment-count">
            
        </div>
        <div class="row" id="comment-form">
            <%= render 'comments/form' %>
        </div>
        <div class="row" id="comment-list">
            <%= render 'comments/comment' %>
        </div>
    </div>
    <div class="col-lg-4">
        <% @relative_images.each do |item| %>
            <div class="row">
                <div class="col-md-4">
                    <%= image_tag item.image.url, :size => "100x100" %>
                </div>
                <div class="col-md-8">
                    <a href="/images/<%= item.image.id %>" style="font-size: large;"><%= item.image.name %></a>
                    <p><%= item.image.description %></p>
                    <span>Posted by <a href="/users/<%= item.image.user.id %>"><%= item.image.user.name == nil ? item.image.user.email : item.image.user.name %></a></span>
                    <p>at <%= item.image.created_at.to_formatted_s(:short)%></p>
                </div>
            </div>
        <% end %>
    </div>
</div>

